@article{ ISI:000423639100001,
Author = {Saraeian, Shideh and Shirazi, Babak and Motameni, Homayun},
Title = {{Towards an extended BPMS prototype: Open challenges of BPM to flexible
   and robust orchestrate of uncertain processes}},
