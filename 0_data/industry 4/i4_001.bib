Author = {Karati, Arijit and Islam, S. K. Hafizul and Karuppiah, Marimuthu},
Title = {{Provably Secure and Lightweight Certificateless Signature Scheme for
   IIoT Environments}},
Journal = {{IEEE TRANSACTIONS ON INDUSTRIAL INFORMATICS}},
