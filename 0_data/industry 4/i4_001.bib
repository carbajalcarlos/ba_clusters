@article{ ISI:000440214800016,
Author = {Park, Sangil and Huh, Jun-Ho},
Title = {{Effect of Cooperation on Manufacturing IT Project Development and Test
   Bed for Successful Industry 4.0 Project: Safety Management for Security}},
