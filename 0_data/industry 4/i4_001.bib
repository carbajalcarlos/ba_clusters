@article{ ISI:000446673500040,
Author = {Sun, Wen and Liu, Jiajia and Yue, Yanlin and Zhang, Haibin},
Title = {{Double Auction-Based Resource Allocation for Mobile Edge Computing in
   Industrial Internet of Things}},
