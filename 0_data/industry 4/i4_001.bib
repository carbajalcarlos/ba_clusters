@article{ ISI:000436774300272,
Author = {Li, Xuran and Wang, Qiu and Dai, Hong-Ning and Wang, Hao},
Title = {{A Novel Friendly Jamming Scheme in Industrial Crowdsensing Networks
   against Eavesdropping Attack}},
