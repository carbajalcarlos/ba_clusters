@article{ ISI:000437396000003,
Author = {Chen, Chao-Chun and Su, Wei-Tsung and Hung, Min-Hsiung and Lin,
   Zhong-Hui},
Title = {{Map-Reduce-Style Job Offloading Using Historical Manufacturing Behavior
   for Edge Devices in Smart Factory}},
