Title = {{Supervisory Control-Based Navigation Architecture: A New Framework for
   Autonomous Robots in Industry 4.0 Environments}},
Journal = {{IEEE TRANSACTIONS ON INDUSTRIAL INFORMATICS}},
Year = {{2018}},
Volume = {{14}},
